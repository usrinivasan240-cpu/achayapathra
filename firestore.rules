
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Users can only read their own data. Admins can read any user's data.
    // The leaderboard can list users by points.
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isSignedIn() && (request.query.orderBy.path == "points" && request.query.orderBy.direction == "desc" && request.query.limit <= 10);
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Any signed-in user can view donations.
    // Creation requires ownership and a "Pending" status.
    // Updates are allowed by the owner.
    // A non-owner can claim an available donation, which only updates status and claimedBy.
    // Deletes are restricted to the owner or an admin.
    match /donations/{donationId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.donorId == request.auth.uid && request.resource.data.status == 'Pending';
        allow update: if isSignedIn() && 
                      (
                        // Owner can update their own donation
                        resource.data.donorId == request.auth.uid || 
                        // A user can claim an available donation
                        (
                          resource.data.status == 'Available' &&
                          request.resource.data.status == 'Claimed' &&
                          request.resource.data.claimedBy == request.auth.uid &&
                          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'claimedBy'])
                        ) ||
                        // A user can un-claim a donation they claimed
                        (
                          resource.data.status == 'Claimed' &&
                          resource.data.claimedBy == request.auth.uid &&
                          request.resource.data.status == 'Available' &&
                          !('claimedBy' in request.resource.data)
                        )
                      );
        allow delete: if isSignedIn() && (resource.data.donorId == request.auth.uid || isAdmin());
    }
    
    // Any signed-in user can create, read, and update volunteer tasks. Deletion is restricted to owners or admins.
    match /volunteerTasks/{volunteerTaskId} {
      allow read, update, create: if isSignedIn();
      allow delete: if isSignedIn() && (resource.data.volunteerId == request.auth.uid || isAdmin());
    }

    // Feedback can be read by anyone, but only created/updated/deleted by the user who wrote it.
    match /feedbacks/{feedbackId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Leaderboard is public for all to read. Only admins can write to it.
    match /leaderboard/{leaderboardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Site stats are admin-only for both read and write.
    match /siteStats/{siteStatsId} {
      allow read, write: if isAdmin();
    }

    // Admin roles can only be managed by other admins.
    match /roles_admin/{userId} {
        allow read, write: if isAdmin();
    }
  }
}
