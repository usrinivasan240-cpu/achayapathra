/**
 * @file Firebase Security Rules for Achayapathra Application
 *
 * @corePhilosophy This ruleset enforces a strict user-ownership model for user profiles,
 * while allowing public read access to donations. Volunteer tasks and feedbacks are
 * accessible to authorized users. Leaderboard and site statistics are publicly readable and managed by Cloud Functions.
 *
 * @dataStructure
 * - /users/{userId}: Stores individual user profiles, accessible only to the owning user.
 * - /donations/{donationId}: Stores donation information, publicly readable, but writable only by the donor.
 * - /volunteerTasks/{volunteerTaskId}: Stores volunteer task information.
 * - /feedbacks/{feedbackId}: Stores feedback data related to users, donations, and volunteer tasks.
 * - /leaderboard/{leaderboardId}: Stores leaderboard data, managed by Cloud Functions.
 * - /siteStats/{siteStatsId}: Stores site-wide statistics, managed by Cloud Functions.
 *
 * @keySecurityDecisions
 * - User data is private and only accessible to the owning user.
 * - Donations are publicly readable to facilitate discovery, but only the donor can create, update, or delete them.
 * - Leaderboard and SiteStats are publicly readable and managed by Cloud Functions.
 * - Listing of user documents is disallowed to protect user privacy.
 *
 * @denormalizationForAuthorization
 * - Donations include a `donorId` field to simplify ownership checks for write operations.
 *
 * @structuralSegregation
 * - User profiles are stored in a dedicated `/users/{userId}` collection to enforce strict ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces that only the authenticated user can read and write their own profile data.
     * @path /users/{userId}
     * @allow (get, create, update, delete, list) if request.auth.uid == userId
     * @deny (create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Listing users is disallowed.
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to donations but restricts write access to the donor.
     * @path /donations/{donationId}
     * @allow (get, list) if true
     * @allow (create) if request.auth.uid == request.resource.data.donorId
     * @allow (update, delete) if resource.data.donorId == request.auth.uid
     * @deny (create, update, delete) if resource.data.donorId != request.auth.uid
     * @principle Allows public reads for discovery while restricting writes to the donor.
     */
    match /donations/{donationId} {
      function isOwner(donorId) {
        return request.auth.uid == donorId;
      }

      function isExistingOwner(donorId) {
        return isOwner(donorId) && resource != null;
      }

      allow get, list: if true;
      allow create: if request.auth.uid == request.resource.data.donorId;
      allow update: if isExistingOwner(resource.data.donorId);
      allow delete: if isExistingOwner(resource.data.donorId);
    }

    /**
     * @description Restricts access to volunteer tasks.
     * @path /volunteerTasks/{volunteerTaskId}
     * @allow (read, write) if false
     * @principle Restricts all access to the volunteerTasks collection.
     */
    match /volunteerTasks/{volunteerTaskId} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Restricts access to feedbacks.
     * @path /feedbacks/{feedbackId}
     * @allow (read, write) if false
     * @principle Restricts all access to the feedbacks collection.
     */
    match /feedbacks/{feedbackId} {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows public read access to leaderboard data, managed by Cloud Functions.
     * @path /leaderboard/{leaderboardId}
     * @allow (read) if true
     * @deny (write) always
     * @principle Allows public read access, restricts all write access.
     */
    match /leaderboard/{leaderboardId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to site statistics, managed by Cloud Functions.
     * @path /siteStats/{siteStatsId}
     * @allow (read) if true
     * @deny (write) always
     * @principle Allows public read access, restricts all write access.
     */
    match /siteStats/{siteStatsId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }
  }
}